@model IEnumerable<TaskFlow.Models.TaskItem>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Görev Listesi</h2>
        <a asp-action="Create" class="btn btn-success">Yeni Görev Ekle</a>
    </div>
    
    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Durum</th>
                <th class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <span class="badge @(item.IsCompleted ? "bg-success" : "bg-warning text-dark")">
                        @(item.IsCompleted ? "Tamamlandı" : "Devam Ediyor")
                    </span>
                </td>
                <td class="text-center">
    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Düzenle</a>
    <a asp-action="Delete" asp-route-id="@item.Id" 
       class="btn btn-danger btn-sm" 
       onclick="return confirm('Bu görevi silmek istediğinize emin misiniz?')">Sil</a>
</td>
            </tr>
        }
        </tbody>
    </table>
</div>